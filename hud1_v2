// displays as money
function dm(amount) 
{
	string = "" + amount;
	dec = string.length - string.indexOf('.');
	if (string.indexOf('.') == -1)
	return string + '.00';
	if (dec == 1)
	return string + '00';
	if (dec == 2)
	return string + '0';
	if (dec > 3)
	return string.substring(0,string.length-dec+3);
	return string;
}

//sets numbers in form
